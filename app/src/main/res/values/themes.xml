<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.DogTranslator" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.DogTranslator" parent="Base.Theme.DogTranslator" />

    <style name="TextNavigationInactive" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/bvp_regular</item>
        <item name="android:textSize">12dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="TextNavigationActive" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/bvp_bold</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textSize">12dp</item>
    </style>

    <style name="spinnerItemStyle" parent="android:Widget.TextView.SpinnerItem">
    </style>

    <style name="spinnerDropDownItemStyle" parent="android:TextAppearance.Widget.TextView.SpinnerItem">
    </style>

    <style name="CustomDialog" parent="@android:style/Theme.Dialog">
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="BaseDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

</resources>